{
  "name": "globomantics-robot-api",
  "version": "1.0.0",
  "description": "Globomantics Robot Fleet Status API - CircleCI Advanced Configuration Course",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:e2e": "jest tests/e2e --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "lint:md:fix": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    "security": "npm audit --audit-level=moderate",
    "build": "echo 'Build step - copying files...' && mkdir -p dist && cp -r src/* dist/",
    "docker:build": "docker build -t globomantics-robot-api .",
    "docker:run": "docker run -p 3000:3000 globomantics-robot-api"
  },
  "keywords": [
    "circleci",
    "devops",
    "ci-cd",
    "globomantics",
    "robotics"
  ],
  "author": "Globomantics Engineering Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "markdownlint-cli": "^0.44.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
